FROM nvidia/cuda:12.4.1-cudnn-devel-ubuntu20.04

# update package key
RUN apt-key adv --fetch-keys https://developer.download.nvidia.com/compute/cuda/repos/ubuntu2004/x86_64/3bf863cc.pub

# Install base utilities
RUN apt-get update \
    && apt-get install -y build-essential \
    && apt-get install -y wget \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install miniconda
ENV CONDA_DIR /opt/conda
RUN wget --quiet https://repo.anaconda.com/miniconda/Miniconda3-py39_24.9.2-0-Linux-x86_64.sh -O ~/miniconda.sh && \
    /bin/bash ~/miniconda.sh -b -p /opt/conda

# Put conda in path so we can use conda activate
ENV PATH=$CONDA_DIR/bin:$PATH

# install from conda
RUN conda install -y pytorch==2.5.0 torchvision==0.20.0 torchaudio==2.5.0 pytorch-cuda=12.4 -c pytorch -c nvidia
RUN conda install -y conda-forge::pytorch_geometric
RUN conda install -y conda-forge::pytorch-lightning

# system packages
ENV TZ=US \
    DEBIAN_FRONTEND=noninteractive
COPY ./docker/build/dkpg.txt /tmp/dkpg.txt
RUN apt-get update 
RUN xargs apt-get -y install < /tmp/dkpg.txt

# python packages
COPY ./argoverse-api /tmp/argoverse
RUN pip install -e /tmp/argoverse

# create user
ARG username
ARG uid
RUN useradd -ms /bin/bash ${username} -u ${uid}
USER ${username}

# set working directory
WORKDIR /home/${username}/workspace/hivt/